  "components": {
    "background": {
      "primary": "bg-white",
      "secondary": "bg-gray-50",
      "tertiary": "bg-gray-100",
      "gradient": "bg-gradient-to-br from-slate-50 to-blue-50"
    },
    "text": {
      "primary": "text-gray-900",
      "secondary": "text-gray-600",
      "tertiary": "text-gray-500",
      "accent": "text-blue-600",
      "muted": "text-gray-400"
    },
    "border": {
      "primary": "border-gray-200",
      "secondary": "border-gray-300",
      "accent": "border-blue-200",
      "focus": "border-blue-500"
    },
    "button": {
      "primary": {
        "base": "bg-blue-600 text-white border-blue-600",
        "hover": "hover:bg-blue-700 hover:border-blue-700",
        "active": "active:bg-blue-800",
        "disabled": "disabled:bg-gray-300 disabled:text-gray-500"
      },
      "secondary": {
        "base": "bg-white text-gray-700 border-gray-300",
        "hover": "hover:bg-gray-50 hover:border-gray-400",
        "active": "active:bg-gray-100",
        "disabled": "disabled:bg-gray-100 disabled:text-gray-400"
      },
      "ghost": {
        "base": "bg-transparent text-gray-700",
        "hover": "hover:bg-gray-100",
        "active": "active:bg-gray-200"
      }
    },
    "card": {
      "base": "bg-white border-gray-200 shadow-sm",
      "hover": "hover:shadow-md hover:border-gray-300",
      "focus": "focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
    },
    "input": {
      "base": "bg-white border-gray-300 text-gray-900 placeholder-gray-500",
      "focus": "focus:border-blue-500 focus:ring-blue-500",
      "error": "border-red-300 focus:border-red-500 focus:ring-red-500"
    },
    "sidebar": {
      "background": "bg-gradient-to-br from-blue-600 via-indigo-600 to-purple-700",
      "text": "text-white",
      "accent": "bg-white/10",
      "hover": "hover:bg-white/20"
    },
    "gameBoard": {
      "cell": {
        "base": "bg-gradient-to-br from-white/90 to-slate-50/90 border-slate-200/50",
        "hover": "hover:bg-gradient-to-br hover:from-blue-50/90 hover:to-indigo-50/90 hover:border-blue-300/50",
        "winner": "bg-gradient-to-br from-emerald-100 to-emerald-200 border-emerald-400/70",
        "disabled": "opacity-60 cursor-not-allowed"
      },
      "symbol": {
        "x": "text-blue-600",
        "o": "text-red-500"
      }
    }
  },
  "animations": {
    "transition": "transition-all duration-300 ease-in-out",
    "hover": "transform hover:scale-105",
    "pulse": "animate-pulse",
    "bounce": "animate-bounce",
    "fade": "animate-fade-in"
  }
}
