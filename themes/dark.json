  "components": {
    "background": {
      "primary": "bg-slate-900",
      "secondary": "bg-slate-800",
      "tertiary": "bg-slate-700",
      "gradient": "bg-gradient-to-br from-slate-950 to-blue-950"
    },
    "text": {
      "primary": "text-white",
      "secondary": "text-slate-300",
      "tertiary": "text-slate-400",
      "accent": "text-blue-400",
      "muted": "text-slate-500"
    },
    "border": {
      "primary": "border-slate-700",
      "secondary": "border-slate-600",
      "accent": "border-blue-600",
      "focus": "border-blue-400"
    },
    "button": {
      "primary": {
        "base": "bg-blue-600 text-white border-blue-600",
        "hover": "hover:bg-blue-500 hover:border-blue-500",
        "active": "active:bg-blue-700",
        "disabled": "disabled:bg-slate-600 disabled:text-slate-400"
      },
      "secondary": {
        "base": "bg-slate-800 text-slate-200 border-slate-600",
        "hover": "hover:bg-slate-700 hover:border-slate-500",
        "active": "active:bg-slate-600",
        "disabled": "disabled:bg-slate-700 disabled:text-slate-500"
      },
      "ghost": {
        "base": "bg-transparent text-slate-200",
        "hover": "hover:bg-slate-800",
        "active": "active:bg-slate-700"
      }
    },
    "card": {
      "base": "bg-slate-800 border-slate-700 shadow-lg",
      "hover": "hover:shadow-xl hover:border-slate-600",
      "focus": "focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-slate-900"
    },
    "input": {
      "base": "bg-slate-800 border-slate-600 text-white placeholder-slate-400",
      "focus": "focus:border-blue-500 focus:ring-blue-500",
      "error": "border-red-500 focus:border-red-400 focus:ring-red-400"
    },
    "sidebar": {
      "background": "bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900",
      "text": "text-white",
      "accent": "bg-white/10",
      "hover": "hover:bg-white/20"
    },
    "gameBoard": {
      "cell": {
        "base": "bg-gradient-to-br from-slate-800/90 to-slate-900/90 border-slate-700/50",
        "hover": "hover:bg-gradient-to-br hover:from-blue-900/30 hover:to-indigo-900/30 hover:border-blue-600/50",
        "winner": "bg-gradient-to-br from-emerald-900/50 to-emerald-800/50 border-emerald-600/70",
        "disabled": "opacity-60 cursor-not-allowed"
      },
      "symbol": {
        "x": "text-blue-400",
        "o": "text-red-400"
      }
    }
  },
  "animations": {
    "transition": "transition-all duration-300 ease-in-out",
    "hover": "transform hover:scale-105",
    "pulse": "animate-pulse",
    "bounce": "animate-bounce",
    "fade": "animate-fade-in"
  }
}
